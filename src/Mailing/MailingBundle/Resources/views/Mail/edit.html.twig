{# src/Mailing/MailingBundle/Resources/views/Mail/edit.html.twig #}
{% extends 'MailingBundle::layout.html.twig' %}

{% block title %}Edit mail{% endblock%}
{% block headline %}Edit mail{% endblock%}
{% block content %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <form action="{{ path('MailingBundle_mail_edit', {'id': id }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <input type="submit" />
    </form>
{% endblock %}